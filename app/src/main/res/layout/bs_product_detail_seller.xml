<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:padding="20dp"
        android:background="@drawable/shape_rect01">
        <ImageView
            android:id="@+id/PDback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back" />


        <ImageView
            android:id="@+id/delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_baseline_delete_24" />

        <ImageView
            android:id="@+id/editBTN"
            android:layout_width="30dp"
            android:layout_toStartOf="@+id/delete"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit" />

        <TextView
            android:id="@+id/namePD"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center_horizontal"
            android:text="Product Details"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />


    </RelativeLayout>
    <ImageView
        android:id="@+id/addProduct_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_baseline_add_shopping_cart_24"
        android:layout_below="@+id/bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/addProduct_image"
        android:orientation="vertical"

        >
        <TextView
            android:id="@+id/titleTV"
            android:layout_below="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp"
            android:text="Product Title"/>
        <TextView
            android:id="@+id/descProduct"
            android:layout_below="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:text="Description"/>

        <TextView
            android:id="@+id/category"
            android:layout_below="@+id/bar"
            android:layout_width="match_parent"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_margin="8dp"
            android:layout_marginTop="12dp"
            android:text="Category"/>

        <TextView
            android:id="@+id/bs_quantity"
            android:layout_below="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:layout_margin="8dp"
            android:textColor="@color/colorBlack"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:text="Quantity"/>

        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/disscountPrice"
                android:layout_below="@+id/bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_margin="8dp"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="Discount Price"/>

            <TextView
                android:id="@+id/price"
                android:layout_below="@+id/bar"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_margin="8dp"
                android:text="price"/>
            />


        </LinearLayout>
    </LinearLayout>



</RelativeLayout>

