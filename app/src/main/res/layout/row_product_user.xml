<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:contentPadding="8dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_add_shopping_cart_24"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/nextIV"
        android:layout_toEndOf="@+id/product_icon"
        >

        <TextView
            android:id="@+id/rpu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Title"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary_dark"/>
        <TextView
            android:id="@+id/rpu_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="the product description"
            android:maxLines="2"
            android:minLines="2"
            android:layout_below="@+id/rpu_title"
            android:textColor="#000"/>
        <TextView
            android:id="@+id/addToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="addToCart"
            android:drawableLeft="@drawable/ic_baseline_add_shopping_cart_24"
            android:layout_below="@+id/rpu_description"
            android:gravity="center_vertical"
            android:textColor="@color/design_default_color_primary"/>



        <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
            android:layout_below="@+id/addToCart"
            android:layout_alignParentEnd="true"
    >
    <TextView
        android:id="@+id/UdiscountPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginLeft="80dp"
        android:text="20.00 £"
        android:textColor="#000"/>
    <TextView
        android:id="@+id/Uprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="15.50 £"
        android:textColor="#000"/>
</RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/nextIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_baseline_navigate_next_24"
        />
</RelativeLayout>

</androidx.cardview.widget.CardView>